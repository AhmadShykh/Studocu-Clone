<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.home_fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone"
        android:id="@+id/loading_screen">
        <!-- Loading icon -->
        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            style="?android:attr/progressBarStyleLarge"
            android:indeterminateTint="@color/white"/>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:paddingBottom="95dp"

            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <!-- Top Bar Inside Scroll -->
                <RelativeLayout
                    android:id="@+id/topBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:background="@color/white"
                    android:elevation="0dp"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/homeTitle"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/home_text"
                        android:textColor="@color/black"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/settingsIcon"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="21dp"
                        android:src="@drawable/settings_logo"
                        app:tint="@color/settings_icon_tint" />

                    <ImageView
                        android:id="@+id/profileImg"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="21dp"
                        android:src="@drawable/settings_logo" />
                </RelativeLayout>

                <!-- Main Content -->
                <LinearLayout
                    android:id="@+id/logged_out_main_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                    <!-- Create Account Box -->
                    <LinearLayout
                        android:id="@+id/createAccountBox"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/rounded_box_background"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/createAccountHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="15dp"
                            android:text="@string/create_account_heading"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/createAccountDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="14dp"
                            android:text="@string/create_account_description"
                            android:textColor="@color/gray"
                            android:textSize="13sp" />

                        <Button
                            android:id="@+id/continueButton"
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="28dp"
                            android:background="@drawable/rounded_continue_button"
                            android:text="@string/continue_text"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Study Lists Section -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/studyListsHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="2dp"
                            android:layout_marginTop="2dp"
                            android:text="@string/study_lists"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/studyListsDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/saved_docs"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <!-- My Favourites Box -->
                        <LinearLayout
                            android:id="@+id/myFavourites"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/rounded_favourites_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/my_favourites"
                                android:textColor="@color/dark_orange"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="@string/tap_to_learn"
                                android:textColor="@color/orange"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:background="@drawable/rounded_studylist_tag"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="3dp"
                                android:text="@string/study_list"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Recent Documents Section -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/recentDocumentsHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/recent_docs"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/recentDocumentsDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/login_to_continue"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <!-- Recent Documents Box -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/rounded_grayborder_box"
                            android:gravity="start"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="74dp"
                                android:layout_height="11dp"
                                android:layout_marginHorizontal="0dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/rounded_gray_background"
                                android:orientation="vertical"
                                android:padding="16dp"></LinearLayout>

                            <LinearLayout
                                android:layout_width="54dp"
                                android:layout_height="11dp"
                                android:layout_marginHorizontal="0dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/rounded_gray_background"
                                android:orientation="vertical"
                                android:padding="16dp"></LinearLayout>

                            <LinearLayout
                                android:layout_width="74dp"
                                android:layout_height="11dp"
                                android:layout_marginHorizontal="0dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/rounded_gray_background"
                                android:orientation="vertical"
                                android:padding="16dp"></LinearLayout>

                            <LinearLayout
                                android:layout_width="45dp"
                                android:layout_height="11dp"
                                android:layout_marginHorizontal="0dp"
                                android:layout_marginTop="13dp"
                                android:background="@drawable/more_rounded_gray_background"
                                android:orientation="vertical"
                                android:padding="10dp"></LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Recently Viewed Section -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/recentlyViewed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/recently_viewed"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/recentlyViewedDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/login_to_continue"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <!-- Recently Viewed Box -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginTop="13dp"
                            android:background="@drawable/rounded_grayborder_box"
                            android:gravity="start"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <LinearLayout
                                android:layout_width="74dp"
                                android:layout_height="11dp"
                                android:layout_marginHorizontal="0dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/rounded_gray_background"
                                android:orientation="vertical"
                                android:padding="16dp"></LinearLayout>

                            <LinearLayout
                                android:layout_width="54dp"
                                android:layout_height="11dp"
                                android:layout_marginHorizontal="0dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/rounded_gray_background"
                                android:orientation="vertical"
                                android:padding="16dp"></LinearLayout>

                            <LinearLayout
                                android:layout_width="74dp"
                                android:layout_height="11dp"
                                android:layout_marginHorizontal="0dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/rounded_gray_background"
                                android:orientation="vertical"
                                android:padding="16dp"></LinearLayout>

                            <LinearLayout
                                android:layout_width="45dp"
                                android:layout_height="11dp"
                                android:layout_marginHorizontal="0dp"
                                android:layout_marginTop="13dp"
                                android:background="@drawable/more_rounded_gray_background"
                                android:orientation="vertical"
                                android:padding="10dp"></LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Sign In Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/emptyStateImage"
                            android:layout_width="190dp"
                            android:layout_height="190dp"
                            android:layout_gravity="center"
                            android:src="@drawable/light_pic"></ImageView>

                        <TextView
                            android:id="@+id/emptyMessageTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="@string/empty_message_title"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/emptyMessageDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:gravity="center"
                            android:text="@string/empty_message_description"
                            android:textColor="@color/gray"
                            android:textSize="13sp" />

                        <Button
                            android:id="@+id/signInButton"
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="28dp"
                            android:background="@drawable/rounded_continue_button"
                            android:text="@string/sign_in"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Logged in Main Content -->
                <LinearLayout
                    android:id="@+id/logged_in_main_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    android:visibility="visible">
                    <!-- Recent Documents Section -->
                    <LinearLayout
                        android:id="@+id/recent_documents_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/recent_docs"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_see_all_button"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:id="@+id/recent_documents_button"
                                android:text="@string/see_all"

                                android:textColor="@color/gray"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recent_documents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!-- Recently Viewed Section -->
                    <LinearLayout
                        android:id="@+id/recent_viewed_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/recently_viewed"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:id="@+id/recent_viewed_button"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_see_all_button"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:text="@string/see_all"
                                android:textColor="@color/gray"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recent_viewed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- Recommended Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/recommended"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_see_all_button"
                                android:clickable="true"
                                android:focusable="true"
                                android:id="@+id/recommended_button"
                                android:gravity="center"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:text="@string/see_all"
                                android:textColor="@color/gray"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recommendedRecycleView"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- Popular Books Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/popular_books"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/college_text"
                                android:textColor="@color/dark_gray"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_see_all_button"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:text="@string/see_all"
                                android:textColor="@color/gray"
                                android:id="@+id/popular_books_button"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/books_recycle_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- Popular Courses Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/popular_courses"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/college_text"
                                android:textColor="@color/dark_gray"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_see_all_button"
                                android:clickable="true"
                                android:focusable="true"
                                android:id="@+id/popular_studylist_button"
                                android:gravity="center"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:text="@string/see_all"
                                android:textColor="@color/gray"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/modules_recycle_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- Recommended Studylists Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/recommended_studylists"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/college_text"
                                android:textColor="@color/dark_gray"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_see_all_button"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:text="@string/see_all"
                                android:textColor="@color/gray"
                                android:id="@+id/popular_modules_button"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/studylist_recycle_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myFavourites_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >


        <!-- Top Layout -->
        <LinearLayout
            android:id="@+id/topLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/lightest_orange"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
